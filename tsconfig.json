{
  "baseUrl": ".",
  "paths": {
    "@models/*": ["src/models/*"],
    "@utils/*": ["src/utils/*"]
    // other paths
  },
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*",
    "__tests__/**/*", // Include test files
    "jest.config.js" // Include Jest config if it's in TypeScript
  ],
  "exclude": [
    "node_modules"
  ]
}
